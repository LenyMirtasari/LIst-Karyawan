@{
    ViewData["Title"] = "Data Karyawan";
    Layout = "_LayoutKaryawan";
}
<div class="row mt-3 text-center">
    <h3>Daftar Data Karyawan</h3>
</div>

<!-- Register BUtton -->
<div class="row mt-3 pb-3">
    <div class="col-3">
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#registerModal">
            Register
        </button>
    </div>
</div>

<div class="row">
    <table id="penyewa_id" class="display" style="width:100%">
        <thead>
            <tr>
                <th>NRP</th>
                <th>Nama</th>
                <th>No Telp</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>



<!-- Modal -->
<div class="modal fade" id="penyewaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Data Penyewa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="FormUpdate">
                    <input type="hidden" class="form-control" name="PenyewaId" id="PenyewaId1">
                    <div class="mb-3">
                        <label for="Nama" class="form-label">Nama</label>
                        <input type="text" class="form-control" name="Nama" id="Nama1">
                    </div>
                    <div class="mb-3">
                        <label for="Alamat" class="form-label">Alamat</label>
                        <input type="text" class="form-control" name="Alamat" id="Alamat1">
                    </div>
                    <div class="mb-3">
                        <label for="NoTelp" class="form-label">No Telp</label>
                        <input type="text" class="form-control" name="NoTelp" id="NoTelp1">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="UpdateValidation(document.getElementById('PenyewaId1').value)">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Register -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Register Penyewa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="FormRegister">
                    <div class="mb-3">
                        <label for="Nama" class="form-label">Nama</label>
                        <input type="text" class="form-control" name="Nama" id="Nama">
                    </div>
                    <div class="mb-3">
                        <label for="Alamat" class="form-label">Alamat</label>
                        <input type="text" class="form-control" name="Alamat" id="Alamat">
                    </div>
                    <div class="mb-3">
                        <label for="NoTelp" class="form-label">No Telp</label>
                        <input type="text" class="form-control" name="NoTelp" id="NoTelp">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Validation()">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sewa -->
<div class="modal fade" id="SewaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Data Sewa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="FormSewa">
                    <input type="hidden" class="form-control" name="PenyewaId" id="PenyewaId2">
                    <div class="mb-3">
                        <label class="col-md-4" for="Mobil"><strong>Jenis Mobil</strong></label>
                        <select class="col-md-7 form-control" id="Mobil" name="Mobil">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="MulaiSewa" class="form-label">Mulai Sewa</label>
                        <input type="date" class="form-control" name="MulaiSewa" id="MulaiSewa">
                    </div>
                    <div class="mb-3">
                        <label for="AkhirSewa" class="form-label">Akhir Sewa</label>
                        <input type="date" class="form-control" name="AkhirSewa" id="AkhirSewa">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SewaValidation(document.getElementById('PenyewaId2').value)">Save</button>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutKaryawan";
}
<div class="row mt-3 text-center">
    <h3>Daftar Data Karyawan</h3>
</div>

<div class="row mt-3 pb-3">
    <div class="col-3">
        <button type="button" class="btn btn-success" id="save_value">  
            Submit
        </button>
    </div>
</div>

<div class="row">

    <table id="table_id" class="display" style="width:100%">
        <thead>
            <tr>
                <th>No</th>
                <th>NRP</th>
                <th>Nama</th>
                <th>No Telp</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
   
</div>


<div class="row mt-3 pb-3">
    <div class="col-3">
        
    </div>
</div>


<div class="row">

    <table id="table_karyawan" class="display" style="width:100%">
        <thead>
            <tr>
                <th>No</th>
                <th>NRP</th>
                <th>Nama</th>
                <th>No Telp</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>



<!-- Modal -->
<div class="modal fade" id="karyawanModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Data Penyewa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="FormUpdate">
                   
                    <div class="mb-3">
                        <label for="Nama" class="form-label">NRP</label>
                        <input type="text" class="form-control" name="NRP" id="nrp1" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="Nama" class="form-label">Nama</label>
                        <input type="text" class="form-control" name="Nama" id="Nama1">
                    </div>
                    <div class="mb-3">
                        <label for="Alamat" class="form-label">No Tel</label>
                        <input type="text" class="form-control" name="NoTelp" id="NoTelp1">
                    </div>
                    <div class="mb-3">
                        <label for="NoTelp" class="form-label">Email</label>
                        <input type="text" class="form-control" name="Email" id="Email1">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="UpdateValidation(document.getElementById('nrp1').value)">Save</button>
            </div>
        </div>
    </div>
</div>